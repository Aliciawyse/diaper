<section class="content-header">
<% content_for :title, "Diaper Drives - #{current_organization.name}" %>
<h1>
  Diaper Drives
  <small>for <%= current_organization.name %></small>
</h1>
<ol class="breadcrumb">
  <li><%= link_to(dashboard_path) do %>
    <i class="fa fa-dashboard"></i> Home
  <% end %>
  </li>
  <li><a href="#">Diaper Drives</a></li>
</ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
    <div class="box-body">
      <div class="row">
        <div class="col-xs-12">
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover striped">
              <thead>
                <tr>
                  <th>Diaper Drive Name</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th class="numeric">Quantity of Items</th>
                  <th class="numeric">Variety of Items</th>
                  <th class="numeric">In Kind Value</th>
                  <th class="pull-right">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @diaper_drives.each do |diaper_drive| %>
                  <tr>
                    <td><%= diaper_drive.name %></td>
                    <td><%= diaper_drive.start_date %></td>
                    <td><%= diaper_drive.end_date %></td>
                    <td><%= diaper_drive.donations.joins(:line_items).count('line_items.quantity') %></td>
                    <td><%= diaper_drive.donations.joins(:items).distinct(:item_id).count %></td>
                    <td><strong><%= item_value(diaper_drive.donations.count(&:value_per_itemizable)) %></strong></td>
                    <td><%= view_button_to diaper_drive_path(diaper_drive.id) %></td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div><!-- /.box-body.table-responsive -->
        </div><!-- /.col-xs-12 -->
      </div><!-- /.row -->
    </div><!-- /.box-body -->
  </div><!-- /.box -->
  <%# <%= paginate @paginated_donations %>
</section>
