<nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
  <div class="navbar-header">
    <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
  </div>
  <ul class="nav navbar-top-links navbar-right">
    <% if current_user.super_admin? %>
      <li class="dropdown user user-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="fa fa-lock"></i> Administration
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= navigation_link_to "Dashboard", admin_dashboard_path %>
          </li>
          <li>
            <%= navigation_link_to "Organizations", admin_organizations_path %>
          </li>
          <li>
            <%= navigation_link_to "Canonical items", admin_base_items_path %>
          </li>
          <li>
            <%= navigation_link_to "Users", admin_users_path %>
          </li>
        </ul>
      </li>
    <% end %>
    <li class="dropdown notifications-menu">
      <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
        <i class="fa fa-bug"></i>
      </a>
      <ul class="dropdown-menu dropdown-messages dropdown-menu-right">
        <li>
          <a href="#">
            <%= simple_form_for :feedback_message, :url => "/feedback_message" do |f| %>
              <div class="form-group">
                <%= f.label "Submit Your Bug/Message/Input" %>
                <%= f.text_area :message, class: 'form-control', required: true %>
              </div>
              <div class="form-actions">
                <%= submit_button({text: "Send Message", icon: "envelope", size: "md", align: 'pull-left'}) %>
              </div>
            <% end %>
          </a>
        </li>
      </ul>
    </li>
    <li class="dropdown">
      <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
        <i class="fa fa-calendar"></i>
        <% if current_organization && current_organization&.upcoming_distributions > 0 %>
          <span class="label label-danger"><%= current_organization&.upcoming_distributions %></span>
        <% end %>
      </a>
      <ul class="dropdown-menu dropdown-messages">
        <li>
          <div class="dropdown-messages-box">
            <a class="dropdown-item float-left" href="#">
              <i class="fa fa-users text-aqua"></i>
            </a>
            <div>
              <%= current_organization&.upcoming_distributions || 0 %> Pick-ups
              remaining this week
              <br>
            </div>
          </div>
        </li>
        <li class="dropdown-divider"></li>
        <li>
          <div class="text-center link-block">
            <%= fa_icon "calendar" %>
            <%= link_to_if current_organization.id.present?, "View Calendar", pick_ups_distributions_path(organization_id: current_organization.to_param) %>
          </div>
        </li>
      </ul>
    </li>
    <li class="dropdown">
      <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
        <i class="fa fa-bell-o"></i>
        <% if current_organization && current_organization.requests.active_requests.size > 0 %>
          <span class="label label-warning"><%= current_organization&.requests.active_requests.size rescue "0" %></span>
        <% end %>
      </a>
      <ul class="dropdown-menu dropdown-messages">
        <li>
          <div class="dropdown-messages-box">
            <a class="dropdown-item float-left" href="#">
              <i class="fa fa-file-text text-aqua"></i>
            </a>
            <div>
              <%= link_to(requests_path) do %>
                <%= current_organization&.requests.active_requests.size rescue "0" %>
                Diaper Requests
              <% end %>
              <br>
            </div>
          </div>
        </li>
        <li class="dropdown-divider"></li>
        <li>
          <div class="dropdown-messages-box">
            <a class="dropdown-item float-left" href="#">
              <i class="fa fa-file-text text-aqua"></i>
            </a>
            <div>
              <%= link_to "View All Requests", requests_path %>
            </div>
          </div>
        </li>
      </ul>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="hidden-xs"><%= current_user.name %></span>
      </a>

      <ul class="dropdown-menu dropdown-messages">
        <li>
          <div class="dropdown-messages-box">
            <a class="dropdown-item float-left" href="#">
              <%= fa_icon "cog" %>
            </a>
            <div>

              <%= navigation_link_to "Account Settings", edit_user_registration_path(organization_id: nil) %>
              <br>
            </div>
          </div>
        </li>
        <li class="dropdown-divider"></li>
        <% if current_organization.id.present? &&
            (current_user.super_admin? ||
                (current_user.organization_admin? &&
                    current_organization.id == current_user.organization_id)) %>
          <% with_options organization_id: current_user.organization.to_param do |with_org| %>
            <li>
              <div class="dropdown-messages-box">
                <a class="dropdown-item float-left" href="#">
                  <%= fa_icon "users" %>
                </a>
                <div>
                  <%= navigation_link_to "My co-workers", with_org.users_path %>
                  <br>
                </div>
              </div>
            </li>
            <li class="dropdown-divider"></li>
            <li>
              <div class="dropdown-messages-box">
                <a class="dropdown-item float-left" href="#">
                  <%= fa_icon "sitemap" %>
                </a>
                <div>
                  <%= navigation_link_to "My organization", with_org.organization_path %>
                  <br>
                </div>
              </div>
            </li>
            <li class="dropdown-divider"></li>
          <% end %>
        <% end %>
        <li>
          <div class="text-center link-block">
            <%= link_to destroy_user_session_path(organization_id: nil), method: :delete do %>
              <i class="fa fa-sign-out"></i> Log out
            <% end %>
          </div>
        </li>
      </ul>
    </li>
  </ul>
</nav>