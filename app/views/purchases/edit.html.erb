<div class="row wrapper border-bottom white-bg page-heading">
  <% content_for :title, "Edit - Purchases - #{@purchase.purchased_from_view} - #{current_organization.name}" %>
  <div class="col-lg-8">
    <h2> Editing Purchase from <%= @purchase.purchased_from_view %></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to(dashboard_path) do %>
          <i class="fa fa-dashboard"></i> Home
        <% end %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "Purchases", (purchases_path) %>
      </li>
      <li class="breadcrumb-item active">
        Editing <%= @purchase.purchased_from_view %> on <%= @purchase.created_at.to_s(:distribution_date) %>      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="ibox-title">
          <h3>        Editing <%= @purchase.purchased_from_view %> on <%= @purchase.created_at.to_s(:distribution_date) %>
          </h3>
        </div>
        <%= render partial: "purchase_form", object: @purchase %>
      </div>
    </div>
  </div>
</div>