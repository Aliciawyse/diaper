<div class="row wrapper border-bottom white-bg page-heading">
	<% content_for :title, "Edit - Items - #{@item.name} - Inventory - #{current_organization.name}" %>
  <div class="col-lg-8">
    <h2> Editing Item for <%= current_organization.name %></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to(dashboard_path) do %>
          <i class="fa fa-dashboard"></i> Home
        <% end %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "All Items", (items_path) %>
      </li>
      <li class="breadcrumb-item active">
        Editing <%= @item.name %>
      </li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="ibox-title">
          <h3 class="box-title">Update record for <%= @item.name %></h3>
        </div>
        <div class="ibox-content">
		      <%= render partial: "form", object: @item %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Main content -->

