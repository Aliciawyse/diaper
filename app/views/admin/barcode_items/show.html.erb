<div class="row wrapper border-bottom white-bg page-heading">
  <% content_for :title, "Admin - Inventory - Barcode Items - #{@barcode_item.item.name}" %>
  <div class="col-lg-8">
    <h2>
      Barcode Information
      <small>for <%=  @barcode_item.item.name %></small>
    </h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to(admin_dashboard_path) do %>
        <i class="fa fa-lock"></i> Home
      <% end %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to(admin_barcode_items_path) do %>
          All Barcodes
        <% end %>
      </li>
      <li class="breadcrumb-item active">Viewing Barcode</li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="ibox-title">
          <h3><%= @barcode_item.item.name %></h3>
        </div>
        <div class="ibox-content">
          <dl>
            <dt>Quantity</dt>
            <dd><%= @barcode_item.quantity %></dd>
            <dt>Barcode</dt>
            <dd><%= @barcode_item.value %></dd>
          </dl>
          <p>This could be expanded to include summary data about its usage throughout the app.</p>
        </div>
      </div>
    </div>
  </div>
</div>
